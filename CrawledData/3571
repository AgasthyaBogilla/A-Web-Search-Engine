<script type="text/javascript">
    function ShowHide(elementId)
    {
        var element = document.getElementById(elementId);
        if(element.style.display != "block")
            element.style.display = "block";
        else
            element.style.display = "none";
    }
    function ShowPersonRow(elementId)
    {
        var element = document.getElementById(elementId);
        element.style.display = ""; // using table-row here breaks IE6/7
    }
    function ShowLinkRow(elementId)
    {
        var element = document.getElementById(elementId);
        element.style.display = ""; // using table-row here breaks IE6/7
    }
    function HideLinkRow(elementId)
    {
        var element = document.getElementById(elementId);
        element.style.display = "none";
    }

    Tipped.create(".tooltip", {
        position: 'right',
        showOn: 'focus',
        hideOn: 'blur'
    });

    Tipped.create(".tooltipDate", {
        position: 'right',
        showOn: 'focus',
        hideOn: 'blur',
        offset: { x: 50 }
    });

    
    /*Must follow select2 script because of id change */
    Tipped.create('#s2id_location_of_incident', '', {
         position: 'right'
    });

    // 8/17/16:  Only include date_of_incident -related JS when that field is visible
            // Causes date field to be revalidated when using the calendar icon.
        function dateChanged () {
            $('#date_of_incident').trigger("change");
        }
        // Causes date field to be revalidated when manually typing an incorrectly formatted date.
        $('#date_of_incident').blur(function(){
            $(this).trigger("change");
        });

        // Attach a datepicker to the date_of_incident input element
        datePickerController.createDatePicker({
            formElements:{
                "date_of_incident":"%Y-%m-%d"
            },

             // Position the activation button within the span
            positioned:"calendar",
            // Stipulate some callback functions
            callbackFunctions:{
                "datereturned":[dateChanged]
            },
            // Set a range low of 1/1/1960 using a YYYYMMDD format String
            rangeLow:"19600101",
            // Set a range high of today's date using a Date Object
            rangeHigh:new Date()
        });
            
    $('#time_of_incident').timepicker({
        'scrollDefault': 'now',
        'step': '15',
        'timeFormat': 'g:i A'
    });

    // jquery_filer for file uploads
    $('#filer_input').filer({
        limit: 30,
        maxSize: 1000,
        changeInput: true,
        showThumbs: true,
        addMore: true,
        captions: {
            button: "Choose Files",
            feedback: "Choose files to upload",
            feedback2: "file(s) selected",
            drop: "Drop file here to upload",
            removeConfirmation: "Are you sure you want to remove this file?",
            errors: {
                filesLimit: "Only {{fi-limit}} files are allowed to be uploaded.",
                filesType: "This type of file cannot be uploaded.",
                filesSize: "{{fi-name}} is too large. Your total upload cannot exceed {{fi-maxSize}} MB.",
                filesSizeAll: "The files you've chosen are too large. Your total upload cannot exceed {{fi-maxSize}} MB."
            }
        }
    });

    // 8/15/16:  Added to make the file upload part of the natural tabbing order
    //  Because the native <input> element is hidden up and off the page by the script, we had to set tabindex="-1" on it.
    //  Using jquery to fire the click event when enter is pressed on the <div> that serves as the button for selecting files
    $(".jFiler-input").attr('tabindex', "-1");
    $(".jFiler-input-caption").attr('tabindex', "-1");
    $(".jFiler-input-button").attr('tabindex', "0");
    $(".jFiler-input-button").attr('role', "button");
    $(".jFiler-input-button").keypress(function(e){
        if(e.which === 13){
            $(".jFiler-input-button").click();
        }
    });

    /* Makes Abide work on select2 - triggers after the native scripts work */
    $("#location_of_incident").on("invalid.zf.abide", function(ev,el) {
        if($("#location_of_incident").hasClass("is-invalid-input"));
            $("#lbl_location_of_incident").addClass("is-invalid-label");
    });
    $("#location_of_incident").on("valid.zf.abide", function(ev,frm) {
        if($("#location_of_incident").hasClass("is-invalid-input"));
            $("#lbl_location_of_incident").removeClass("is-invalid-label");
    });

    /* Makes Abide work on radio buttons - triggers after the native scripts work */
    $(".radio-group").on("invalid.zf.abide", function(ev,el) {
        $(this).find("input").each(function (i) {
            if($(this).hasClass("is-invalid-input")) {
              //  alert("this is true");
                $(this).closest("fieldset").find("legend").addClass("is-invalid-label");
                $(this).closest("fieldset").find('span.form-error').addClass("is-visible");
            }
        });
    });
    $(".radio-group").on("valid.zf.abide", function(ev,frm) {
        $(this).find("input").each(function (i) {
            if(!$(this).hasClass("is-invalid-input")) {
              //  alert("this is true");
                $(this).closest("fieldset").find("legend").removeClass("is-invalid-label");
                $(this).closest("fieldset").find('span.form-error').removeClass("is-visible");
            }
        });
    });

    $('input, textarea, select').on("change.zf.abide", function(ev,elem) {
        var invalid_fields = $('form').find('[data-invalid]');
        if (invalid_fields.length == 0)
            $('.alert.callout').addClass('hide');
        else
            $('.alert.callout').removeClass('hide');
    });

    /* Tests to ensure they completed the captcha */
    $('#IR').submit(function(e) {
        var v = grecaptcha.getResponse();
        if (v.length == 0) {
            $("#recaptcha_text").find("span").addClass("is-visible");
            e.preventDefault();
        }
        else 
            $("#recaptcha_text").find("span").removeClass("is-visible");
    });

    /* Makes form scroll to first invalid entry */
    $('form').on('forminvalid.zf.abide', function () {
        var invalid_fields = $(this).find('[data-invalid]');

        $('html, body').animate({
            scrollTop: $(invalid_fields[0]).offset().top - 40
        }, 1000, function() {
            /*$(invalid_fields[0]).focus();*/  /*for putting focus on the first invalid field*/
        });
    });

    //$("#IR").on("formvalid.zf.abide", function(ev,frm) {
    //    alert("Form is valid, finally!");
    //});

    /* Prevents IR from submitting when hitting enter */
    /*
    $('#IR').on('keyup keypress', function(e) {
      var keyCode = e.keyCode || e.which;
      if (keyCode === 13) {
        e.preventDefault();
        return false;
      }
    });
    */
    $('#IR').on('keydown', function(e){
        var focused = $('div:focus').attr('class');

        if(e.keyCode == 13 && e.target.nodeName!='TEXTAREA' && focused!='jFiler-input-button')
        {
          e.preventDefault();
          return false;
        }
    });


</script>
</body>
</html>
